<%= form_for (@article) do |f| %>
<div class="container">
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control mb-3" %>
  <%= f.label :content %>
  <%= f.text_area :content, class: "form-control mb-3" %>
<br>
  <%= f.submit class: "btn btn-primary form-control"%>
  </div>
</div>
<% end %>
